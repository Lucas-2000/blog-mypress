<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<div class="container">
  <hr>
  <h2>Articles</h2>
  <a class="btn btn-success" href="/admin/users/create">New User</a>
  <hr>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Id</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include ('../../partials/footer.ejs') %>
<script>
  function confirmDelete(event, form) {
    event.preventDefault();
    const decision = confirm("You want to delete this Article?")
    if(decision) {
      form.submit()
    }
  }
</script>